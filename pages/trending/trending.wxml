<view style="display:none">
  <image wx:for="{{images}}" wx:key="id" id="{{item._id}}" src="{{item.fileId}}" bindload="onImageLoad"></image>
</view>
<scroll-view scroll-y="true" style="height:{{scrollH}}px" bindscrolltolower="loadImages">
  <view style="width:100%">
    <view class="col">
      <view wx:for="{{col1}}" wx:key="id" class="item">
        <view class="grade">{{item.score}}</view>
        <image src="{{item.fileId}}" data-item="{{item}}" style="width:100%;height:{{item.height}}px" bindtap="previewImg"></image>
      </view>
    </view>
    <view class="col">
      <view wx:for="{{col2}}" wx:key="id" class="item">
        <view class="grade">{{item.score}}</view>
        <image src="{{item.fileId}}" data-item="{{item}}" style="width:100%;height:{{item.height}}px" bindtap="previewImg"></image>
      </view>
    </view>
  </view>
</scroll-view>