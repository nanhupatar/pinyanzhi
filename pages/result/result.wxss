.container{
  background: #f8f8f8;
}

.container .poster {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
}

.measureWrap {
    width: 100%;
    font-family: \x22微软雅黑\x22;
    text-align: center;
    -webkit-flex: 1 0 auto;
    flex: 1 0 auto;
}

.measureCon {
    width: 100%;
    background: #fff;
}

.measureCon view {
    text-align: center;
}

.measureCon image {
    width: 80%;
    margin: auto;
}

.measureCon text {
    display: block;
    font-size: 14px;
    color: #1d1d1d;
    line-height: 25px;
    padding: 0 30px;
    text-align: left;
}

.btnWrap {
    width: 100%;
    background: #f8f8f8;
    padding: 24px 30px;
    box-sizing: border-box;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
}

.btnWrap button {
    height: 44px;
    background: #fa6b45;
    box-shadow: 0 2px 8px 0 #ffcdbf;
    border-radius: 100px;
    font-size: 18px;
    color: #fff;
}

.btnWrap .share button {
  margin-bottom: 31px; 
}

.btnWrap .action {
  display: flex;
  justify-content: space-between;
}

.btnWrap .action button {
    width: 140px;
}

.imageContent {
    position: relative;
    overflow: hidden;
}

.wx_canvas1 {
    position: absolute;
    z-index: 300;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 100%;
}

.wx_canvas2 {
    display: block;
    position: absolute;
    z-index: 200;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
}

.footer {
    -webkit-flex: 0 0 auto;
    flex: 0 0 auto;
}

button::after {
    border: none;
}
