/* pages/detail/detail.wxss */
page {
  background: #ffffff;
}
.userInfo {
  display: flex;
  align-items: center;
  padding: 5px 0 5px 10px;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}

.userInfo .avatar {
  width: 25px;
  height: 25px;
  border-radius: 100px;
  margin-right: 10px;
}

.userInfo .username {
  font-size: 14px;
  color: #aaaaaa;
}

.scoreImage-container {
  display: flex;
  justify-content: center;
  margin: 10px;
  padding: 5px;
  background: #f5f5f5;
}

.scoreImage {
  width: 80vw;
}

.scoreText {
  padding: 5px 10px;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  font-size: 15px;
  line-height: 20px;
  color: #666666;
}

.share {
  display: flex;
  align-items: center;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}

.share .share-item {
  font-size: 15px;
  border: none;
  background: #ffffff;
  color: #d4237a;
}

.share-item-text {
  margin-left: 5px;
}

.backBtn {
  padding: 5px 10px;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
}

.backBtn .back {
  border: none;
  background: rgb(137, 207, 240);
  color: #ffffff;
}

.imageList-comtainer {
  box-sizing: border-box;
  width: 750rpx;
  padding: 10rpx 15rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;
}

.imageList-item {
    width: 350rpx;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
    background-color: #fff;
    overflow: hidden;
    animation: fadeIn 1s;
}

.imageList-item .cover-img-container {
  position: relative;
  overflow: hidden;
}

.cover-img-container .cover-img{
  width: 350rpx;
  height: 508rpx;
}

.imageList-item .user-info {
  display: flex;
  align-items: center;
  padding: 0 5px 5px 5px;
}

.user-info .avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius:100px;
  margin-right: 5px;
}

.user-info .nickName {
  font-size: 30rpx;
  color: #AAAAAA;
  flex:1;
  overflow: hidden;
  text-overflow: ellipsis;
}