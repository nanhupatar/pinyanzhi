/* pages/photo/photo.wxss */
.content {
  height: 100vh;
}

.content .item {
  float: left;
  width: 48%;
  height: 500rpx;
  margin: 1%;
  background: #fff;
  border-radius: 6px;
  position: relative;
  overflow: hidden;
}

.item .grade {
  display: flex;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.04);
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  font-size: 14px;
}

.content .item .grade .grade-info {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
}
